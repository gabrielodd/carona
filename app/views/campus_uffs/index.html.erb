<% flash.each do |msg| %>
  <div class="alert alert-danger" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Campus UFF</h1>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Numero</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campus_uffs.each do |campus_uff| %>
      <tr>
        <td><%= campus_uff.nome %></td>
        <td><%= campus_uff.endereco %></td>
        <td><%= campus_uff.numero %></td>
        <td><%= campus_uff.bairro %></td>
        <td><%= campus_uff.cep %></td>
        <td><%= campus_uff.cidade %></td>
        <td><%= link_to 'Show', campus_uff %></td>
        <td><%= link_to 'Edit', edit_campus_uff_path(campus_uff) %></td>
        <td><%= link_to 'Destroy', campus_uff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campus Uff', new_campus_uff_path, class: "btn btn-primary btn-lg" %>

