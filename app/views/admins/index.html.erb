<% flash.each do |msg| %>
  <div class="alert alert-success" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Administradores</h1>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ativo</th>
      <th>Identificacao Login</th>
      <th>Data desativação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.nome %></td>
        <td><%= admin.ativo %></td>
        <td><%= admin.dados_identificacoes_id %></td>
        <td><%= admin.data_desativacao %></td>
        <td><%= link_to 'Show', admin %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <% if admin.ativo? %>
          <td><%= link_to 'Desativar', desativar_admin_path(admin) %></td>
        <% else %>
          <td><%= link_to 'Ativar', ativar_admin_path(admin) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_admin_path, class: "btn btn-primary btn-lg" %>

<%= form_tag(admins_path, :method => "get", id: "search-form") do %>
<!-- text field tag=action,args,identifier,placeholdertext... -->
  <%= text_field_tag :search, params[:search], class: "search-query", placeholder: "namesearch", type: "search", data: {autocomplete: autocomplete_admins_nome_admins_path} %>  
  <%= submit_tag "Search" %>
<%end%>

<script type="text/javascript" charset="utf-8">
  $('#search').bind('railsAutocomplete.select', function(event, data){
  $('#search-form').submit()
  });
</script>


