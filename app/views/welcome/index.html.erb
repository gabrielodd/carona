<div class="ui-widget">
    <label for="tags">Tags: </label>
    <input id="tags">
</div>


<script>
    $( function() {
        var availableTags = [
            "ActionScript",
            "AppleScript",
            "Asp",
            "BASIC",
            "C",
            "C++",
            "Clojure",
            "COBOL",
            "ColdFusion",
            "Erlang",
            "Fortran",
            "Groovy",
            "Haskell",
            "Java",
            "JavaScript",
            "Lisp",
            "Perl",
            "PHP",
            "Python",
            "Ruby",
            "Scala",
            "Scheme"
        ];
        $( "#tags" ).autocomplete({
            source: availableTags
        });
    } );
</script>

<%= form_with(url: search_iduff_path, local: true, method: :get) do |form| %>
    <div class="input-group custom-search-form">
        <%= form.text_field :term, class:"form-control", placeholder:"Nome iduff"%>
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
<% end %>
