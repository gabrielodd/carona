<!DOCTYPE html>
<html>
  <head>
    <title>Carona</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'admins' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'admins' %>
  </head>

  <body>
    <div class="container">

      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to 'Carona UFF', root_path, class:"navbar-brand" %>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>
            <%= form_with(url: search_path, local: true, method: :get, class:"navbar-form navbar-left") do |form| %>
              <div class="form-group">
                <%= form.text_field :term, class:"form-control", placeholder:"Local de partida"%>
              </div>
              <div class="form-group">
                <%= form.text_field :term2, class:"form-control", placeholder:"Local de destino"%>
              </div>
              <button type="submit" class="btn btn-default">Pesquisar</button>
            <% end %>
            <ul class="nav navbar-nav navbar-right">
              
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= Pub::IdentificacaoLogin.find_by(iduff: current_user.iduff).nome %> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to admins_path do %>
                        <i class="fa fa-user fa-fw"></i> Perfil
                      <% end %>
                    </li>
                    
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to root_path do %>
                        <i class="fa fa-sign-out fa-fw"></i> Sair
                      <% end %>
                    </li>
                  </ul>
                </li>
              
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

      <%= yield %>
    </div> <!-- /container -->
  </body>
</html>
